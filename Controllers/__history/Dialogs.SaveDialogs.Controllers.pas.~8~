unit Dialogs.SaveDialogs.Controllers;

interface

uses
  Dialogs.Interfaces, Vcl.Dialogs;

type
  TSaveDialogs = class(TInterfacedObject, iDialogs, iDialogOptions)
  private
    FSaveDialogs: TSaveDialog;
  public
    function ofReadOnly: iDialogOptions;
    function ofFileMustExist: iDialogOptions;
    function ofPathMustExist: iDialogOptions;
    function ofAllowMultiSelect: iDialogOptions;
    function ofForceShowHidden: iDialogOptions;
    function EndOptions: iDialogOptions;

    function DefaultExt(Value: String): iDialogs;
    function FilterIndex(Value: Integer): iDialogs;
    function InitialDir(Value: String): iDialogs;

    function AddOptions: iDialogOptions;

    constructor Create;
    destructor Destroy; override;
    class function New: iDialogs;
  end;

implementation

{ TSaveDialogs }

constructor TSaveDialogs.Create;
begin
  FSaveDialogs := TSaveDialog.Create(nil);
end;

destructor TSaveDialogs.Destroy;
begin
  FSaveDialogs.DisposeOf;
  inherited;
end;

function TSaveDialogs.EndOptions: iDialogOptions;
begin

end;

class function TSaveDialogs.New: iDialogs;
begin
  Result := Self.Create;
end;

function TSaveDialogs.ofAllowMultiSelect: iDialogOptions;
begin

end;

function TSaveDialogs.ofFileMustExist: iDialogOptions;
begin

end;

function TSaveDialogs.ofForceShowHidden: iDialogOptions;
begin

end;

function TSaveDialogs.ofPathMustExist: iDialogOptions;
begin

end;

function TSaveDialogs.ofReadOnly: iDialogOptions;
begin

end;

function TSaveDialogs.AddOptions: iDialogOptions;
begin
  Result := Self;
end;

function TSaveDialogs.DefaultExt(Value: String): iDialogs;
begin

end;

function TSaveDialogs.FilterIndex(Value: Integer): iDialogs;
begin

end;

function TSaveDialogs.InitialDir(Value: String): iDialogs;
begin

end;

end.

unit Dialogs.SaveDialogs.Controllers;

interface

uses
  Dialogs.Interfaces, Vcl.Dialogs;

type
  TSaveDialogs = class(TInterfacedObject, iDialogs)
  private
    FSaveDialogs: TSaveDialog;
  public
    function DefaultExt(Value: String): iDialogs;
    function FilterIndex(Value: Integer): iDialogs;
    function InitialDir(Value: String): iDialogs;
    function AddOptions(Value: TOpenOptions): iDialogs;
    constructor Create;
    destructor Destroy; override;
    class function New: iDialogs;
  end;

implementation

{ TSaveDialogs }

constructor TSaveDialogs.Create;
begin
  FSaveDialogs := TSaveDialog.Create(nil);
end;

destructor TSaveDialogs.Destroy;
begin
  FSaveDialogs.DisposeOf;
  inherited;
end;

class function TSaveDialogs.New: iDialogs;
begin
  Result := Self.Create;
end;

function TSaveDialogs.AddOptions(Value: TOpenOptions): iDialogs;
begin
  Result := Self;
  FSaveDialogs.Options := FSaveDialogs.Options + Value
end;

function TSaveDialogs.DefaultExt(Value: String): iDialogs;
begin

end;

function TSaveDialogs.FilterIndex(Value: Integer): iDialogs;
begin

end;

function TSaveDialogs.InitialDir(Value: String): iDialogs;
begin

end;

end.
